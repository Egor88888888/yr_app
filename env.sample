# Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# Web App
RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
PORT=8080

# AI Services - PRIMARY: OpenAI GPT
API_GPT=sk-your-openai-api-key-here

# AI Fallbacks
OPENROUTER_API_KEY=your_openrouter_api_key

# Payment (CloudPayments)
CLOUDPAYMENTS_PUBLIC_ID=your_public_id
CLOUDPAYMENTS_SECRET_KEY=your_secret_key

# Google Sheets
GOOGLE_SHEETS_CREDS_JSON={"type":"service_account","project_id":"..."}
GOOGLE_SHEET_ID=your_google_sheet_id

# Notifications
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
SMS_RU_API_KEY=your_sms_ru_api_key

# Channel Configuration
TARGET_CHANNEL_ID=-1001234567890
TARGET_CHANNEL_USERNAME=@your_channel

# Autopost (disabled by default)
ENABLE_AUTOPOST=false
POST_INTERVAL_HOURS=10 