# Bot Configuration - Use Railway Environment Variables in Production
BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id

# Database (Railway PostgreSQL)
DATABASE_URL=your_database_url_here

# Web App
RAILWAY_PUBLIC_DOMAIN=your_railway_domain_here
PORT=8080

# AI (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Azure OpenAI (Additional AI)
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_ENDPOINT=your_azure_endpoint_here
AZURE_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002

# SMM Channels & Autoposting
TARGET_CHANNEL_ID=your_channel_id_here
TARGET_CHANNEL_USERNAME=@your_channel
POST_INTERVAL_HOURS=4
EXTERNAL_CHANNELS=@channel1,@channel2,@channel3

# Telethon Session (for advanced features)
TELETHON_USER_SESSION=your_telethon_session_here

# Payment (CloudPayments) - Add your data if needed
CLOUDPAYMENTS_PUBLIC_ID=your_public_id
CLOUDPAYMENTS_SECRET_KEY=your_secret_key

# Google Sheets - Add your data if needed
GOOGLE_SHEETS_CREDS_JSON={"type":"service_account","project_id":"..."}
GOOGLE_SHEET_ID=your_google_sheet_id

# Notifications - Add your data if needed
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
SMS_RU_API_KEY=your_sms_ru_api_key 